@model IEnumerable<User>

@{
    ViewData["Title"] = "Manage Carer";
}

<div class="container">

    <h1>Manage Carer</h1>

    <p>
        <a class="btn btn-primary" asp-action="CreateCarer">Create New</a>
    </p>
    <table id="CarerList" class="table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        <a asp-action="EditCarer" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="CarerDetails" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="DeleteCarer" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    </div>

    <script>
        $(document).ready(function () {
            $('#CarerList').DataTable();
        });
    </script>
